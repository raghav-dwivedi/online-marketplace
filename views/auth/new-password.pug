extends ../layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content
    main
        if (hasError)
            each error in validationErrors
                .user-message.user-message--error #{error.msg}
        form.login-form(action = "/new-password", method="POST")
            .form-control
                label(for="password") Password
                input(type="password", name="password")#password
            .form-control
                label(for="confirmPassword") Confirm Password
                input(type="password", name="confirmPassword")#confirmPassword
            input(type="hidden",  name="userId", value=userId)
            input(type="hidden",  name="passwordToken", value=passwordToken)
            input(type="hidden",  name="_csrf", value=csrfToken)
            button.btn(type="submit") Change Password